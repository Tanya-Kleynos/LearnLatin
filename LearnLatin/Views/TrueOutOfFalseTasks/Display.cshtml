@model LearnLatin.Models.ViewModels.TaskViewModel

<div class="container">
    @using (Html.BeginForm("SaveResults", "Tests"))
    {
        <div class="row">
            <div class="col-6 text-center">
                <h2>Вопрос</h2>
                <a style="width:70%; border-color: #4b1ebb;border-width: 3px;" class="btn text-center">@Model.Description</a>
            </div>
            <div class="col-6">
                <h2 class="text-center">Ответ</h2>
                @foreach (var item in Model.Answers)
                {
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" type="radio" name="userAnswerId"
                                   value="@item.Id" asp-for="@item.AnsValue" /> @item.AnsValue
                        </label>
                    </div>
                }
            </div>
        </div>


        <div class="row mt-4">
            @*<div class="col-6">
                    <button type="button" class="btn btn-primary text-center">Завершить тренировку</button>
                </div>*@
            <div class="col-6 text-right">
                <input type="hidden" name="taskId" value="@Model.Id" />
                <input type="hidden" name="testId" value="@Model.TestId" />
                <input type="submit" class="btn btn-primary text-center" value="Дальше" />
            </div>
        </div>
    }
</div>