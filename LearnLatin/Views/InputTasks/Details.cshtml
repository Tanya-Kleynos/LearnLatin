@model LearnLatin.Models.InputTask

@{
    ViewData["Title"] = "Детали таска с вводом";
}

<h1>Детали таска</h1>

<div>
    <h6>Тип: ввод правильного ответа</h6>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Задание
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Создано
        </dt>
        <dd class="col-sm-10">
            @*@Model.Creator.UserName (@Model.Created)*@
            @Html.DisplayFor(model => model.Created)
        </dd>
        <dt class="col-sm-2">
            Редактировано
        </dt>
        <dd class="col-sm-10">
            @*@Model.Editor.UserName (@Model.Modified)*@
            @Html.DisplayFor(model => model.Modified)
        </dd>
        <dt class="col-sm-2">
            Номер в очереди
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumInQueue)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Редактировать</a> |
    <a asp-action="Details" asp-controller="Tests" asp-route-id="@ViewBag.Test.Id">Назад</a>
</div>
