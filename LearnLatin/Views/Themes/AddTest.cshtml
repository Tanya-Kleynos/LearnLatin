@model LearnLatin.Models.CreateViewModels.TestAddViewModel
@{
    ViewData["Title"] = "Добавить тест";
}

<h1>Добавить тест</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddTest">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="TestId" class="col-md-2 control-label">Тест</label>
                    <div class="col-md-10">
                        <select asp-for="TestId" class="form-control" asp-items="ViewBag.TestId"></select>
                    </div>
                </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Themes" asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
