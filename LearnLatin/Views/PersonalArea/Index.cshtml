@{
    ViewData["Title"] = "Home Page";
}

<div class="container h-100">
    <div class="row mb-3">
        <a class="btn btn-primary text-center mr-3"
           asp-area="" asp-controller="Users" asp-action="Edit">
            Редактировать профиль
        </a>
        <a class="btn btn-primary text-center mr-3"
           asp-area="" asp-controller="Manage" asp-action="ChangePassword">
            Изменить пароль
        </a>
        <a class="btn btn-primary text-center mr-3"
           asp-area="" asp-controller="Users" asp-action="Delete">
            Удалить аккаунт
        </a>
        <a class="btn btn-primary text-center mr-3"
           asp-area="" asp-controller="Tests" asp-action="Index">
            Тесты
        </a>
    </div>
    <div class="row">
        <div class="col-12 h-100 d-flex flex-column justify-content-center">
            <a class="align-self-center mb-2" style="font-size: 20px;">Ваш прогресс</a>
            <div style="height: 100%; overflow-x: auto"
                 class="container d-flex flex-column text-black">
                <table>
                    <thead>
                        <tr>
                            <th>
                                Тема
                            </th>
                            <th>
                                Прогресс
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Tests)
                        {
                        <tr>
                            <td>
                                @item.Name
                                <a class="btn btn-primary text-center mr-3"
                                   asp-area="" asp-controller="Tests" asp-action="Start" asp-route-id="@item.Id">
                                    Пройти тест
                                </a>
                            </td>
                            <td class="align-middle">
                                <div class="progress mt-1">
                                    <div class="progress-bar" role="progressbar" style="width: 20%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
