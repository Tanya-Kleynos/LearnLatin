@model LearnLatin.Models.TrueOutOfFalseAnswer

@{
    ViewData["Title"] = "Детали ответа";
}

<h1>Детали ответа</h1>

<div>
    <h6>Тип таска: выбор правильного ответа</h6>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Ответ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AnsValue)
        </dd>
        <dt class="col-sm-2">
            Правильный ответ
        </dt>
        <dd class="col-sm-10">
            @if (@Model.IsTrue == true)
            {
                <p>Да</p>
            }
            else
            {
                <p>Нет</p>
            }
        </dd>
        <dt class="col-sm-2">
            Создано
        </dt>
        <dd class="col-sm-10">
            @Model.Creator.UserName (@Model.Created)
        </dd>
        @if (Model.Editor != null)
        {
            <dt class="col-sm-2">
                Редактировано
            </dt>
            <dd class="col-sm-10">
                @Model.Editor.UserName (@Model.Modified)
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Редактировать</a> |
    <a asp-action="Index" asp-route-taskId="@ViewBag.Task.Id">Назад</a>
</div>
