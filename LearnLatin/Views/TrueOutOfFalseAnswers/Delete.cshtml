@model LearnLatin.Models.TrueOutOfFalseAnswer

@{
    ViewData["Title"] = "Удалить ответ";
}

<h1>Удалить ответ</h1>

<h4>Вы уверены, что хотите удалить этот ответ?</h4>
<div>
    <h6>Тип таска: выбор правильного ответа</h6>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Ответ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AnsValue)
        </dd>
        <dt class="col-sm-2">
            Правильный ответ
        </dt>
        <dd class="col-sm-10">
            @*@Html.DisplayFor(model => model.IsTrue)*@
            @if(@Model.IsTrue == true)
            {
                <p>Да</p>
            }
            else
            {
                <p>Нет</p>
            }
        </dd>
        <dt class="col-sm-2">
            Создано
        </dt>
        <dd class="col-sm-10">
            @*@Model.Creator.UserName (@Model.Created)*@
            @Html.DisplayFor(model => model.Created)
        </dd>
        <dt class="col-sm-2">
            Редактировано
        </dt>
        <dd class="col-sm-10">
            @*@Model.Editor.UserName (@Model.Modified)*@
            @Html.DisplayFor(model => model.Modified)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index" asp-route-taskId="@ViewBag.Task.Id">Назад</a>
    </form>
</div>
