@model LearnLatin.Models.CreateViewModels.TrueOutOfFalseAnswerCreateViewModel

@{
    ViewData["Title"] = "Добавить ответ для таска с выбором";
}

<h1>Создать ответ</h1>

<h4>Тип таска: выбор правильного ответа</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-route-taskId="@ViewBag.Task.Id">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AnsValue" class="control-label">Ответ</label>
                <input asp-for="AnsValue" class="form-control" />
                <span asp-validation-for="AnsValue" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">

                    <input class="form-check-input" asp-for="IsTrue" /> Правильный ответ
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
